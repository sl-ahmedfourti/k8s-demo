{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "regexManagers": [
    {
      "fileMatch": ["config\\.yaml$"],
      "matchStrings": ["chartVersion:\\s*(?<currentValue>.*?)\\s*chartName:\\s*(?<depName>.*?)\\s*repoURL:\\s*(?<registryUrl>.*?)\\s|$"],
      "datasourceTemplate": "helm"
    }
  ]
}
