{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "enabledManagers": [
      "regex"
    ],
  "regexManagers": [
    {
      "fileMatch": ["config\\.yml$"],
      "matchStrings": ["chartVersion:\\s*(?<currentValue>.*?)\\s*chartName:\\s*(?<depName>.*?)\\s*repoURL:\\s*(?<registryUrl>.*?)\\s|$"],
      "datasourceTemplate": "helm"
    }
  ]
}
