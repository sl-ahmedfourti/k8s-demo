{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "regexManagers": [
    {
      "fileMatch": ["config\\.yaml$"],
      "matchStrings": ["(?<currentValue>.*?)=(^  ([^ :]*):\n(?:(?:    chartVersion: ([\\d\\.]*)\n)|(?:    [^ ].*)\n)*) (?<depName>.*?)=(^  ([^ :]*):\n(?:(?:    chartName: (.*)\n)|(?:    [^ ].*)\n)*)"],
      "datasourceTemplate": "helm"
    }
  ]
}
