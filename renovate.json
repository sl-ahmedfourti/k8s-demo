{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "regexManagers": [
    {
      "fileMatch": ["config\\.yaml$"],
      "matchStrings": ["(^  ([^ :]*):\n(?:(?:    chartVersion: ([\\d\\.]*)\n)|(?:    [^ ].*)\n)*)=(?<currentValue>.*?) (^  ([^ :]*):\n(?:(?:    chartName: (.*)\n)|(?:    [^ ].*)\n)*)=(?<depName>.*?) (^  ([^ :]*):\n(?:(?:    repoURL: (.*)\n)|(?:    [^ ].*)\n)*)=(?<registryUrl>.*?) "],
      "datasourceTemplate": "helm"
    }
  ]
}
