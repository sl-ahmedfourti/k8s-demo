{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["config\\.yaml$"],
      "matchStrings": ["^  ([^ :]*):\\n(?:(?:    chartVersion: (?<currentValue>.+?)\\n)|(?:    chartName: (?<depName>.*?)\\n)|(?:    repoURL: (?<registryUrl>.*?)\\n)|(?:    [^ ].*)\\n)*"],
      "datasourceTemplate": "helm"
    }
  ]
}
