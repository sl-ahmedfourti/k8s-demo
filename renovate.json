{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "regexManagers": [
    {
      "fileMatch": ["config\\.yaml$"],
      "matchStrings": ["/^  ([^ :]*):\n(?:(?:    chartVersion: ([\d\.]*)\n)|(?:    [^ ].*)\n)*/gm:\\s*(?<currentValue>.*?)\\s*/^  ([^ :]*):\n(?:(?:    chartName: ([\d\.]*)\n)|(?:    [^ ].*)\n)*/gm:\\s*(?<depName>.*?)\\s*/^  ([^ :]*):\n(?:(?:    repoURL: ([\d\.]*)\n)|(?:    [^ ].*)\n)*/gm:\\s*(?<registryUrl>.*?)\\s|$"],
      "datasourceTemplate": "helm"
    }
  ]
}
