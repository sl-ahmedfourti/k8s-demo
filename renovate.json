{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\config\\/[^/]+\\.ya?ml$"],
      "matchStrings": ["^  ([^ :]*):\\n(?:(?:    chartVersion: ((?<currentValue>.*?))\\n)|(?:    chartName: ((?<depName>.*?))\\n)|(?:    repoURL: ((?<registryUrl>.*?))\\n)|(?:    [^ ].*)\\n)*"],
      "datasourceTemplate": "helm"
    }
  ]
}
